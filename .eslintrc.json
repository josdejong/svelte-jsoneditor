{
  "env": {
    "browser": true,
    "es2020": true,
    "mocha": true
  },
  "extends": [
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "rules": {
  },
  "plugins": [
    "svelte3"
  ],
  "overrides": [
    {
      "files": ["*.svelte"],
      "processor": "svelte3/svelte3"
    },
    {
      "files": ["*.svelte"],
      "rules": {
        "import/first": "off",
        "no-multiple-empty-lines": "off"
      }
    }
  ]
}
