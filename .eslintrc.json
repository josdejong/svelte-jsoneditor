{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:svelte/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "extraFileExtensions": [".svelte"],
    "sourceType": "module",
    "ecmaVersion": 2019
  },
  "rules": {
    "consistent-return": [
      "warn",
      {
        "treatUndefinedAsUnspecified": false
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.svelte"],
      "parser": "svelte-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser"
      }
    }
  ],
  "env": {
    "browser": true,
    "es2017": true,
    "es2020": true,
    "node": true,
    "mocha": true
  }
}
